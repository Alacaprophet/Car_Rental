@model IEnumerable<Domain.Enums.VehicleRentalPriceTable>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-area="Admin" asp-action="Create" style="text-decoration-line:none;" class="btn btn-light text-success">Yeni Oluştur</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="text-info">
                Araç Modeli
            </th>
            <th class="text-info">
                Vites Tipi
            </th>
            <th class="text-info">
               Kiralama Periyodu
            </th>
            <th class="text-info">
                Renk Tipi
            </th>
            <th class="text-info">
                Üretim Yılı
            </th>
            <th class="text-info">
                Fiyat
            </th>
            <th class="text-info">
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransmissionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.RentalPriceId }, new { @class = "btn btn-primary" })
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Sil", "Delete", new { id = item.RentalPriceId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
