@model IEnumerable<VehicleDTO>

@{
    ViewData["Title"] = "Araç Hizmetleri";
}

<h1>Araç Hizmetleri</h1>

<p>
    <a asp-area="Admin" asp-action="Create" style="text-decoration-line:none;" class="btn btn-light text-success">Yeni Oluştur</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            @*<th>
            @Html.DisplayNameFor(model => model.Id)
        </th>*@
            <th class="text-info">
                @Html.DisplayNameFor(model => model.VehicleBrandName)
            </th>
            <th class="text-info">
                @Html.DisplayNameFor(model => model.VehicleModelName)
            </th>
            <th class="text-info">
                @Html.DisplayNameFor(model => model.TransmissionTypeName)
            </th>
            <th class="text-info">
                @Html.DisplayNameFor(model => model.FuelTypeName)
            </th>
            <th class="text-info">
                @Html.DisplayNameFor(model => model.TireTypeName)
            </th>
            <th class="text-info">
                @Html.DisplayNameFor(model => model.VehicleClassTypeName)
            </th>
            <th class="text-info">
                @Html.DisplayNameFor(model => model.ColorTypeName)
            </th>
            <th class="text-info">
                @Html.DisplayNameFor(model => model.ProductionYear)
            </th>
            <th class="text-info">
                @Html.DisplayNameFor(model => model.EngineDisplacement)
            </th>
            <th class="text-info">
                @Html.DisplayNameFor(model => model.Horsepower)
            </th>
            <th class="text-info">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="text-info">
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            @*<td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.VehicleBrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransmissionTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FuelTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TireTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleClassTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColorTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductionYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineDisplacement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horsepower)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) 
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }
    </tbody>
</table>
