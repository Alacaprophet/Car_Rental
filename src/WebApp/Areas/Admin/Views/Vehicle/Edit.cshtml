@model Domain.Entities.Vehicle

@{
    ViewData["Title"] = "Düzenle";
    Response response = ViewBag.Response;
    List<SelectListItem> VehicleModel = ViewBag.ModelName;
    List<SelectListItem> VehicleColor = ViewBag.ColorType;
    List<SelectListItem> VehicleTransmission = ViewBag.Transmission;
    List<SelectListItem> VehicleFuel = ViewBag.Fuel;
    List<SelectListItem> VehicleTire = ViewBag.Tire;
    List<SelectListItem> VehicleClassType = ViewBag.ClassType;
}


<h1>Düzenle</h1>

<h4>Lastik Tipi</h4>
<hr />
@if (response != null)
{
    <message-box is-success="@response.IsSuccess" message="@response.Message"></message-box>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>*@
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label asp-for="VehicleModelId" class="control-label">Model</label>
                @*<input asp-for="VehicleModelId" class="form-control" />*@
                @Html.DropDownListFor(m => m.VehicleModelId, VehicleModel, new { @class = "form-control" })
                <span asp-validation-for="VehicleModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransmissionTypeId" class="control-label">Vites Türü</label>
                @*<input asp-for="TransmissionTypeId" class="form-control" />*@
                @Html.DropDownListFor(m => m.TransmissionTypeId, VehicleTransmission, new { @class = "form-control" })
                <span asp-validation-for="TransmissionTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelTypeId" class="control-label">Yakıt Türü</label>
                @*<input asp-for="FuelTypeId" class="form-control" />*@
                @Html.DropDownListFor(m => m.FuelTypeId, VehicleFuel, new { @class = "form-control" })
                <span asp-validation-for="FuelTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TireTypeId" class="control-label">Lastik Türü</label>
                @*<input asp-for="TireTypeId" class="form-control" />*@
                @Html.DropDownListFor(m => m.TireTypeId, VehicleTire, new { @class = "form-control" })
                <span asp-validation-for="TireTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleClassTypeId" class="control-label">Araç Sınıfı</label>
                @*<input asp-for="VehicleClassTypeId" class="form-control" />*@
                @Html.DropDownListFor(m => m.VehicleClassTypeId, VehicleClassType, new { @class = "form-control" })
                <span asp-validation-for="VehicleClassTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorTypeId" class="control-label">Renk</label>
                @*<input asp-for="ColorTypeId" class="form-control" />*@
                @Html.DropDownListFor(m => m.ColorTypeId, VehicleColor, new { @class = "form-control" })
                <span asp-validation-for="ColorTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionYear" class="control-label">Üretim Yılı</label>
                <input asp-for="ProductionYear" class="form-control" />
                <span asp-validation-for="ProductionYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineDisplacement" class="control-label">Motor HP</label>
                <input asp-for="EngineDisplacement" class="form-control" />
                <span asp-validation-for="EngineDisplacement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horsepower" class="control-label"> Beygir Gücü</label>
                <input asp-for="Horsepower" class="form-control" />
                <span asp-validation-for="Horsepower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Araçlar Listesine Geri Dön</a>
</div>

