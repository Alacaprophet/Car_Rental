@model IEnumerable<Domain.Entities.VehicleBrand>

@{
    ViewData["Title"] = "Araç Markası İşlemleri";
}

<h1>Araç Markası İşlemleri</h1>
<p>

    <a asp-area="Admin" asp-action="Create" style="text-decoration-line:none;" class="btn btn-light text-success">Yeni Marka Oluştur</a>

</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th class="text-info">
                @Html.DisplayNameFor(model => model.Name)
            </th class="text-info">
            <th class="text-info">
            İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id },new { @class="btn btn-primary"}) |
                @*@Html.ActionLink("Detay", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Sil", "Delete", new { id=item.Id}, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
