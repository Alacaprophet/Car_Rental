@model Domain.Entities.VehicleModel

@{
    ViewData["Title"] = "Yeni Oluştur";
    List<SelectListItem> vehicleBrandList = ViewBag.VehicleBrands;

    Response response = ViewBag.Response;
}

    <h1>Oluştur</h1>

    <h4>Model Listesi</h4>
    <hr />
    @if (response != null)
    {
        <message-box is-success="@response.IsSuccess" message="@response.Message"></message-box>
    }
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @*<div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VehicleBrandId" class="control-label"></label>
                    @Html.DropDownListFor(m => m.VehicleBrandId, vehicleBrandList, new { @class = "form-control" })
                    <span asp-validation-for="VehicleBrandId" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

